<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:conv="clr-namespace:M000.Converter">
	<conv:BooleanToGeschlechtConverter x:Key="BGC"/>
	
	<Style TargetType="Window" x:Key="DefaultWindowStyle">
		<Setter Property="FontSize" Value="14"/>
		<Setter Property="Width" Value="300"/>
		<Setter Property="Height" Value="250"/>
		<Setter Property="Background">
			<Setter.Value>
				<LinearGradientBrush>
					<GradientStop Color="LightGreen" Offset="0"/>
					<GradientStop Color="Aqua" Offset="0.5"/>
					<GradientStop Color="OrangeRed" Offset="1"/>
				</LinearGradientBrush>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="UniformGrid">
		<Setter Property="Columns" Value="2"/>
		<Setter Property="Margin" Value="0, 0, 0, 5"/>
	</Style>

	<Style TargetType="RadioButton">
		<Setter Property="GroupName" Value="Gender"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>
	</Style>
</ResourceDictionary>