<UserControl x:Class="M000.IntegerCounter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:M000"
			 Name="Self">
	<DockPanel>
		<StackPanel DockPanel.Dock="Right" Width="20">
			<Button Content="&#11205;" Click="UpClicked" VerticalContentAlignment="Center" FontSize="6"/>
			<Button Content="&#11206;" Click="DownClicked" VerticalContentAlignment="Center" FontSize="6"/>
		</StackPanel>
		<TextBox Text="{Binding ElementName=Self, Path=Counter}"
				 VerticalContentAlignment="Center"/>
	</DockPanel>
</UserControl>
