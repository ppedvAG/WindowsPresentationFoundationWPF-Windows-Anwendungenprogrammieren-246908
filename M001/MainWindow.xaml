<Window x:Class="M001.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
	<!--Komplexe Eigenschaften (auslagern)-->
	<!--Window.Eigenschaft-->
	<!--Danach weiteres XML Element hineinlegen-->
	<Window.Background>
		<!--LinearGradientBrush benötigt mehr Platz als in der = Syntax möglich ist-->
		<LinearGradientBrush>
			<GradientStop Color="LightGreen" Offset="0"/>
			<GradientStop Color="Red" Offset="1"/>
		</LinearGradientBrush>
	</Window.Background>
	<StackPanel Margin="10">
		<Button Content="Hallo" Margin="0, 0, 0, 5" x:Name="EinButton"/>
		<Button Name="ZweiButton" Click="ZweiButton_Click">Hallo</Button>
		<!--Kommentar-->
	</StackPanel>
</Window>
