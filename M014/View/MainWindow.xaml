<Window x:Class="M014.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:vm="clr-namespace:M014.ViewModel"
        Title="MainWindow" Height="450" Width="800">
	<Window.DataContext>
		<vm:MainWindowViewModel/>
	</Window.DataContext>
    <StackPanel>
		<!--MVVM-->
		<!--Strikte Trennung von Frontend und Backend-->
		<!--Das Backend (View-Model, Model) können komplett separat von der View existieren-->
		<!--Momentan, sind die Backend Klassen (MainWindow.xaml.cs) strikt von der View abhängen (Usings, Window-Vererbung, InitializeComponent)-->
		
		<!--Schrittliste: -->
		<!--1. Ordnerstruktur herstellen-->
		<!--2. Bestehende Dateien in die entsprechenden Ordner bewegen-->
		<!--2.1. Bestehende Namespaces anpassen, x:Class anpassen, App.xaml anpassen-->
		<!--3. Zu den Views die ViewModel Klassen hinzufügen-->
		<!--3.1. Zu jeder View ihr ViewModel per DataContext hinzufügen-->
		
		<!--Aufgabe: M012 zu MVVM umbauen-->
    </StackPanel>
</Window>
